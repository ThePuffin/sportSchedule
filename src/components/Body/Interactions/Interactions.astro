---
import Buttons from './Buttons/Buttons';
import DatePickerSelector from './dateRangePicker/DatePickerSelector';
---

<style>
  @media (max-width: 600px) {
    td {
      display: block;
      width: 100%;
    }
  }
</style>

<table style={{ tableLayout: 'fixed', width: '100%' }}>
  <tbody>
    <tr>
      <td style={{ textAlign: 'center', verticalAlign: 'middle' }}>
        <DatePickerSelector client:visible />
      </td>
      <td style={{ textAlign: 'center', verticalAlign: 'middle' }}>
        <Buttons client:visible />
      </td>
    </tr></tbody
  >
</table>
