---
import Team from '../Team/Team.astro';
import { teamsSelectedId } from '../../store/store';

let { activeTeams } = Astro.props;
const teamsSelectedIds = activeTeams
  .map((team, id) => {
    if (id < 5) {
      return team.id;
    }
  })
  .filter((t) => t);
teamsSelectedId.set(teamsSelectedIds);
---

{
  teamsSelectedIds.length &&
    teamsSelectedIds.map((team, i) => (
      <>
        <Team {teamsSelectedIds} {activeTeams} {i} />
      </>
    ))
}
